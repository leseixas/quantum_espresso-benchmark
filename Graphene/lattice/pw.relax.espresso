&CONTROL
                   calculation    =    'relax'
                        prefix    =    'pwscf'
                         title    =    'Graphene'
                  restart_mode    =    'from_scratch'
                    pseudo_dir    =    '../../../pseudos/'
                     verbosity    =    'high'
                    wf_collect    =    .true.
                       disk_io    =    'none'
                 etot_conv_thr    =    1.0D-4
                 forc_conv_thr    =    3.889D-4
/

&SYSTEM
                         ibrav    =    0
                           nat    =    2
                          ntyp    =    1
                          nbnd    =    20
                       ecutwfc    =    70.0
                         nspin    =    1
                   occupations    =    'smearing'
                      smearing    =    'fermi-dirac'
                       degauss    =    1.D-3
/

&ELECTRONS
                      conv_thr    =    1.D-8
              electron_maxstep    =    300
               diagonalization    =    'david'
              diago_david_ndim    =    4
                diago_thr_init    =    1.D-3
/

&IONS
                  ion_dynamics    =    'bfgs'
/

